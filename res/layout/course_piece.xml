<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_hui"
    tools:context=".CoursePieceActivity">

    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_margin="6dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_margin="4dp"
            android:src="@mipmap/c4"
            android:id="@+id/course_piece_pic"
            android:layout_width="match_parent"
            android:layout_height="220dp" />
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="5dp"
                android:text="课程名："
                android:textColor="@color/bg_ce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
android:layout_marginRight="20dp"
                android:text="Android"
                android:id="@+id/course_piece_cname"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/bg_ce"
                android:layout_marginRight="5dp"
                android:text="专业："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="5dp"
                android:text="Android"
                android:id="@+id/course_piece_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Android"
                android:id="@+id/course_piece_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/bg_ce"
            android:layout_marginRight="5dp"
            android:text="更新时间："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:text="Android"
                android:id="@+id/course_piece_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </LinearLayout>
        <ImageView
            android:alpha="0.3"
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_margin="6dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/course_piece_intro_txt"
                android:text="内容简介:"
                android:textSize="16sp"
                android:textColor="@color/bg_ce"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="4dp"
                android:text="testssssssssssadasdfasdhsadiuasidiaushdiuaasdnksadksahdashdhasudhasukahsdkhaskdhashdiashdiuashdiauhhasdihasidhaishdisahudidiashudiashdiuashdiasu"
                android:id="@+id/course_piece_intro"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        >
        <Button
            android:background="@color/one_color"
            android:text="开始阅读"
            android:onClick="goLearn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:background="@color/two_color"
            android:text="加入学习"
            android:id="@+id/course_piece_add"
            android:onClick="addStudy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>
